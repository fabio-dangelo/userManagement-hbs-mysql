{{#if removedUser}}
<div class="alert">
    User has been removed. <button type="button" class="bi bi-x" id="alert-button"></button>
</div>
{{/if}}


<div>
    <h1>Users</h1>
    <a href="/adduser" type="button">+ add user</a>
</div>

<table>
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Email</th>
            <th scope="col">Phone</th>
            <th scope="col">Action</th>
        </tr>
    </thead>


    {{#each rows}}

    <thead class="small-table">
        <tr>
            <th scope="col">#</th>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Email</th>
            <th scope="col">Phone</th>
            <th scope="col">Action</th>
        </tr>
    </thead>



    <tbody>
        <tr>
            <th scope="row">{{this.id}}</th>
            <td>{{this.first_name}}</td>
            <td>{{this.last_name}}</td>
            <td>{{this.email}}</td>
            <td>{{this.phone}}</td>

            <td>
                <a href="/viewuser/{{this.id}}"><i class="bi bi-eye"></i>View</a>
                <a href="/edituser/{{this.id}}"><i class="bi bi-pencil"></i>Edit</a>
                <a href="/{{this.id}}"><i class="bi bi-person-x"></i>Delete</a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>